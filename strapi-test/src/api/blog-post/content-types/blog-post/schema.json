{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "singularName": "blog-post",
    "pluralName": "blog-posts",
    "displayName": "BlogPost"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "body_ckeditor": {
      "type": "customField",
      "options": {
        "preset": "defaultMarkdown"
      },
      "required": true,
      "customField": "plugin::ckeditor5.CKEditor"
    }
  }
}
